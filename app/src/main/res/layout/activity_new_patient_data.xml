<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.techintheworld.www.edots.NewPatientDataActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <!--Put form controls here-->

            <!--eDOTS button-->
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
                <!--android:text="@string/app_name"-->
                <!--android:id="@+id/textView" />-->

            <!--national ID field-->
            <EditText
                android:id="@+id/National_ID"
                android:layout_height="wrap_content"
                android:hint="@string/new_patient_data_national_ID"
                android:inputType="text"
                android:layout_width="fill_parent">
            </EditText>

            <!--fingerprint button-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_patient_data_fingerprint"
                android:onClick="switchCheckFingerPrint"
                android:layout_gravity="center_horizontal" />

            <!--name field-->
            <EditText
                android:id="@+id/Name"
                android:layout_height="wrap_content"
                android:hint="@string/new_patient_data_name"
                android:inputType="text"
                android:layout_width="fill_parent">
            </EditText>

            <!--father's name field-->
            <EditText
                android:id="@+id/Fathers_name"
                android:layout_height="wrap_content"
                android:hint="@string/new_patient_data_fathers_name"
                android:inputType="text"
                android:layout_width="fill_parent">
            </EditText>

            <!--mother's name field-->
            <EditText
                android:id="@+id/Mothers_name"
                android:layout_height="wrap_content"
                android:hint="@string/new_patient_data_mothers_name"
                android:inputType="text"
                android:layout_width="fill_parent">
            </EditText>

            <!--Birthdate field-->
            <EditText
                android:id="@+id/Birthdate"
                android:layout_height="wrap_content"
                android:hint="@string/new_patient_data_birthdate"
                android:inputType="date"
                android:layout_width="fill_parent">
            </EditText>

            <!--Sex field-->
            <EditText
                android:id="@+id/Sex"
                android:layout_height="wrap_content"
                android:hint="@string/new_patient_data_sex"
                android:inputType="text"
                android:layout_width="fill_parent">
            </EditText>

            <!--Treatment field-->
            <EditText
                android:id="@+id/Treatment"
                android:layout_height="wrap_content"
                android:hint="@string/new_patient_data_treatment"
                android:inputType="text"
                android:layout_width="fill_parent">
            </EditText>

            <!--Sex-->
            <!--<Spinner-->
                <!--android:id="@+id/Sex"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:hint="@string/new_patient_data_sex">-->
            <!--</Spinner>-->

            <!--next button-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_patient_data_next"
                android:onClick="switchPatientHome"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
